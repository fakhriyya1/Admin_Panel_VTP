@using VTPAdmin.ViewComponentModels
@model WidgetModel

<div class="col-md-6 grid-margin transparent">
    <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body" style="min-height: 150px">
                    <p class="mb-4">Ümumi iştirakçıların sayı</p>
                    <p class="fs-30 mb-2">@Model.MemberCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body" style="min-height: 150px">
                    <p class="mb-4">İştirakçıların üstünlük təşkil etdiyi ixtisas</p>
                    <p class="fs-30 mb-2">İT</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
            <div class="card card-light-blue">
                <div class="card-body" style="min-height: 150px">
                    <p class="mb-4">Qadın iştirakçıların sayı</p>
                    <p class="fs-30 mb-2">@Model.FemaleMemberCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
            <div class="card card-light-danger">
                <div class="card-body" style="min-height: 150px">
                    <p class="mb-4">Kişi iştirakçıların sayı</p>
                    <p class="fs-30 mb-2">@Model.MaleMemberCount</p>
                </div>
            </div>
        </div>
    </div>
</div>
