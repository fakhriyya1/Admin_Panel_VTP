@model IEnumerable<EventVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex m-3 justify-content-between align-items-baseline">
            <h4 class="card-title">Görüşlər</h4>
            <a asp-controller="Event" asp-action="Add" class="btn btn-inverse-info btn-fw">Əlavə et</a>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th>Görüş Adı</th>
                                <th>Görüş Hostları</th>
                                <th>Görüşün Tarixi</th>
                                <th>Görüşün Müddəti</th>
                                <th style="text-align: center">Lokasiya</th>
                                <th>Görüş tipi</th>
                                <th style="text-align: center">Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.EventName</td>
                                    <td>
                                        @item.EventHost
                                        @if (item.Guest != null)
                                        {
                                            <br />

                                            @item.Guest
                                        }
                                    </td>
                                    <td style="text-align: center">@item.EventDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td style="text-align: center">@item.Duration</td>
                                    <td style="text-align: center">@item.EventPlace</td>
                                    <td>
                                        <label class="badge badge-info px-3">@item.EventType</label>
                                    </td>
                                    <td class="d-flex justify-content-center">
                                        <a asp-action="Update" asp-route-eventId="@item.Id" class="btn btn-warning btn-rounded btn-fw text-white px-4 py-2 mx-1">Update</a>
                                        <a asp-action="SafeDelete" asp-route-eventId="@item.Id" class="btn btn-danger btn-rounded btn-fw px-4 py-2 mx-1">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
}

@section Scripts {
    <script src="~/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/js/data-table.js"></script>
}


