@model IEnumerable<MemberVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex m-3 justify-content-between align-items-baseline">
            <h4 class="card-title">İştirakçılar</h4>
            <a asp-controller="Member" asp-action="Add" class="btn btn-inverse-info btn-fw">Əlavə et</a>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th>Tam Ad</th>
                                <th>Yaş</th>
                                <th style="text-align: center">İxtisas</th>
                                <th style="text-align: center">Yaradan</th>
                                <th>Cins</th>
                                <th style="text-align: center">Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.Age</td>
                                    <td style="text-align: center">@item.Field</td>
                                    <td style="text-align: center">@item.CreatedBy</td>
                                    @if (item.Gender == "Kişi")
                                    {
                                        <td>
                                            <label class="badge badge-info px-3">Kişi</label>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label class="badge badge-pink">Qadın</label>
                                        </td>
                                    }
                                    <td class="d-flex justify-content-center">
                                        <a asp-action="Info" asp-route-memberId="@item.Id" class="btn btn-info btn-rounded btn-fw px-4 py-2 mx-1">View</a>
                                        <a asp-action="Update" asp-route-memberId="@item.Id" class="btn btn-warning btn-rounded btn-fw text-white px-4 py-2 mx-1">Update</a>
                                        <a asp-action="SafeDelete" asp-route-memberId="@item.Id" class="btn btn-danger btn-rounded btn-fw px-4 py-2 mx-1">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <style>
        .badge-pink {
            background-color: #ffa8b7
        }
    </style>
}

@section Scripts {
    <script src="~/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/js/data-table.js"></script>

}
