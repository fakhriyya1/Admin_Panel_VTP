@model MemberVM
@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İştirakçı məlumatları</h4>
                <form class="forms-sample" method="get">
                    <div class="form-group">
                        <label asp-for="FullName">Tam Ad</label>
                        <input asp-for="FullName" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age">Yaş</label>
                        <input asp-for="Age" type="number" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudiedAt">Universitet</label>
                        <input asp-for="StudiedAt" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender">Cins</label>
                        <input asp-for="Gender" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Field">İxtisas</label>
                        <input asp-for="Field" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudyYear">Kurs</label>
                        <input asp-for="StudyYear" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Degree">Təhsil Səviyyəsi</label>
                        <input asp-for="Degree" type="text" class="form-control" readonly>
                    </div>
                    <button type="button" class="btn btn-primary" id="backButton">Back</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("backButton").addEventListener("click", function () {
            window.location.href = "@Url.Action("Index", "Member")";
        })
    </script>
}

